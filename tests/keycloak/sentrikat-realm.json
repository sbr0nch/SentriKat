{
  "realm": "sentrikat",
  "enabled": true,
  "displayName": "SentriKat Test",
  "sslRequired": "none",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": false,
  "users": [
    {
      "username": "testuser",
      "email": "testuser@sentrikat.test",
      "firstName": "Test",
      "lastName": "User",
      "enabled": true,
      "credentials": [
        {
          "type": "password",
          "value": "password123",
          "temporary": false
        }
      ]
    },
    {
      "username": "testadmin",
      "email": "testadmin@sentrikat.test",
      "firstName": "Test",
      "lastName": "Admin",
      "enabled": true,
      "credentials": [
        {
          "type": "password",
          "value": "password123",
          "temporary": false
        }
      ]
    }
  ],
  "clients": [
    {
      "clientId": "sentrikat-saml",
      "name": "SentriKat SAML SP",
      "enabled": true,
      "protocol": "saml",
      "fullScopeAllowed": true,
      "frontchannelLogout": true,
      "attributes": {
        "saml.assertion.signature": "true",
        "saml.force.post.binding": "true",
        "saml.multivalued.roles": "false",
        "saml.encrypt": "false",
        "saml_force_name_id_format": "true",
        "saml_name_id_format": "email",
        "saml.server.signature": "true",
        "saml.server.signature.keyinfo.ext": "false",
        "saml.signing.certificate": "",
        "saml.client.signature": "false",
        "saml_assertion_consumer_url_post": "http://localhost:5000/saml/acs",
        "saml_single_logout_service_url_redirect": "http://localhost:5000/saml/sls"
      },
      "redirectUris": [
        "http://localhost:5000/*",
        "http://localhost/*",
        "https://localhost/*"
      ],
      "baseUrl": "http://localhost:5000",
      "adminUrl": "http://localhost:5000",
      "protocolMappers": [
        {
          "name": "email",
          "protocol": "saml",
          "protocolMapper": "saml-user-attribute-idp-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "email",
            "friendly.name": "email",
            "attribute.name": "email",
            "attribute.nameformat": "Basic"
          }
        },
        {
          "name": "firstName",
          "protocol": "saml",
          "protocolMapper": "saml-user-attribute-idp-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "firstName",
            "friendly.name": "givenName",
            "attribute.name": "firstName",
            "attribute.nameformat": "Basic"
          }
        },
        {
          "name": "lastName",
          "protocol": "saml",
          "protocolMapper": "saml-user-attribute-idp-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "lastName",
            "friendly.name": "sn",
            "attribute.name": "lastName",
            "attribute.nameformat": "Basic"
          }
        },
        {
          "name": "username",
          "protocol": "saml",
          "protocolMapper": "saml-user-attribute-idp-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "username",
            "friendly.name": "uid",
            "attribute.name": "username",
            "attribute.nameformat": "Basic"
          }
        }
      ]
    }
  ],
  "components": {
    "org.keycloak.storage.UserStorageProvider": [
      {
        "name": "openldap",
        "providerId": "ldap",
        "config": {
          "enabled": ["true"],
          "priority": ["0"],
          "fullSyncPeriod": ["-1"],
          "changedSyncPeriod": ["-1"],
          "cachePolicy": ["DEFAULT"],
          "editMode": ["READ_ONLY"],
          "vendor": ["other"],
          "connectionUrl": ["ldap://openldap:389"],
          "bindDn": ["cn=readonly,dc=sentrikat,dc=test"],
          "bindCredential": ["readonly"],
          "usersDn": ["ou=users,dc=sentrikat,dc=test"],
          "usernameLDAPAttribute": ["uid"],
          "rdnLDAPAttribute": ["uid"],
          "uuidLDAPAttribute": ["entryUUID"],
          "userObjectClasses": ["inetOrgPerson"],
          "searchScope": ["1"],
          "pagination": ["true"],
          "importEnabled": ["true"],
          "syncRegistrations": ["false"],
          "trustEmail": ["true"]
        }
      }
    ]
  }
}
